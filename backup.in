# $Id: backup.in,v 1.2 2021-04-01 20:52:00+05:30 Cprogrammer Exp mbhangui $
#
if [ -n "$BACKUP" -a -n "$DEST" ] ; then
	status=0
	if [ ! -d $DEST/backup ] ; then
		mkdir -p $DEST/backup
	fi
	for i in $BACKUP
	do
		echo "backing up $i"
		rsync -valptgomHE --delete $i $DEST/backup
		ret=$?
		if [ $ret -ne 0 ] ; then
			status=1
		fi
	done
	exit $status
fi
exit 0
