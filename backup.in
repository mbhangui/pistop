HOST=$(uname -n)
if [ ! -d $DEST/backup ] ; then
	echo "$DEST/backup doesn't exist" 1>&2
	exit 1
fi
if [ -n "$BACKUP" -a -n "$DEST" ] ; then
	if [ ! -d $DEST/backup/$HOST ] ; then
		mkdir -p $DEST/backup/$HOST
		if [ $? -ne 0 ] ; then
			exit 1
		fi
	fi
	exec rsync -valptgomHE --delete $BACKUP $DEST/backup/$HOST
fi
exit 0
